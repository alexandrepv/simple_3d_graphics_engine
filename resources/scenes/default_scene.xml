<scene>

    <entity name="Point Light 1" >
        <point_light position="1.0 12.3 3.6" color="1.0 1.0 1.0"/>
    </entity>

    <entity name="Point Light 2" >
        <point_light position="1.0 12.3 -3.6" color="1.0 1.0 1.0"/>
    </entity>

    <entity name="Directional Light 1" >
        <directional_light direction="0.0 -1.0 0.0" color="1.0 1.0 1.0"/>
    </entity>

    <!-- Viewports should be set in terms of ratios. This is a more versatile solution for resizing windows -->
    <entity name="Main Camera" >
        <camera viewport_norm="0 0 1 1"/>
        <transform_3d position="-0.5 0.5 2.8"/>
        <input_control/>
    </entity>

    <entity name="Dragon 1" >
        <mesh shape="obj" fpath="models/dragon.obj"/>
        <material albedo="0.2 1.0 0.6"/>
        <transform_3d/>
        <renderable/>
    </entity>

    <entity name="Dragon 2" >
        <mesh shape="obj" fpath="models/dragon.obj"/>
        <transform_3d position="-1 0 -1"/>
        <material albedo="0.2 .3 0.8"/>
        <renderable/>
    </entity>

    <entity name="Floor" >
        <mesh shape="box" width="10.0" height="0.1" depth="10.0" />
        <transform_3d position="0 -0.5 0"/>
        <material albedo="0.75 0.75 0.75"/>
        <renderable/>
    </entity>w

    <entity name="Sample text" >
        <text_2d font_name="Consolas.ttf" >
            This is a sample text
        </text_2d>
    </entity>

</scene>