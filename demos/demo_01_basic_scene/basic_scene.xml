<scene>

    <entity name="First Camera">
        <camera viewport_screen_ratio="0 0 0.5 1" perspective="true"/>
        <transform_3d position="-0.5 0.5 5"/>
        <input_control speed="6.0"/>
        <overlay_2d/>
    </entity>


    <entity name="Second Camera">
        <camera viewport_screen_ratio="0.5 0 0.5 0.5" perspective="true"/>
        <transform_3d position="-0.5 0.5 10"/>
        <input_control speed="6.0"/>
        <overlay_2d/>
    </entity>

     <entity name="Third Camera">
        <camera viewport_screen_ratio="0.5 0.5 0.5 0.5" perspective="true"/>
        <transform_3d position="-0.5 0.5 15"/>
        <input_control speed="6.0"/>
         <overlay_2d/>
    </entity>


    <entity name="Point Light 1">
        <point_light diffuse="1.0 1.0 1.0"/>
        <transform_3d position="2.0 2.0 2.0"/>
        <mesh shape="icosphere" radius="0.2" subdivisions="4"/>
        <material diffuse="1.0 1.0 1.0" shininess_factor="32.0" lighting_mode="solid"/>
    </entity>

    <entity name="Directional Light 1">
        <directional_light diffuse="1.0 1.0 1.0"/>
        <transform_3d position="2.0 2.0 2.0" rotation="-45 90 0" degrees="true"/>
    </entity>

    <entity name="2D">
        <directional_light diffuse="1.0 1.0 1.0"/>
        <transform_3d position="2.0 2.0 2.0" rotation="-45 90 0" degrees="true"/>
    </entity>

    <entity name="female body">
        <mesh fpath="meshes/female_body_gesture_practice.glb" scale="2"/>
        <material diffuse="0.0 0.41 0.2" shininess_factor="32.0"/>
        <transform_3d position="-2 0 0" rotation="-90 0 0" degrees="true"/>
    </entity>

    <entity name="braim_stem">
        <mesh fpath="meshes/BrainStem.gltf" scale="1"/>
        <material diffuse="tab10_blue" shininess_factor="32.0"/>
        <transform_3d position="0 0 0" rotation="-90 0 0" degrees="true"/>

    </entity>

    <entity name="capsule">
        <mesh shape="capsule" height="1.5" radius="0.25" count="32 32"/>
        <material diffuse="gray" shininess_factor="32.0"/>
        <transform_3d position="-3 0 3" degrees="true"/>
    </entity>

    <entity name="Red Sphere">
        <mesh shape="icosphere" radius="0.5" subdivisions="4"/>
        <collider shape="sphere" radius="0.5"/>
        <transform_3d position="2 0 2"/>
        <material diffuse="tab10_red" diffuse_highlight="tab10_orange" shininess_factor="32.0"/>
    </entity>

    <entity name="Floor">
        <mesh shape="box" width="10.0" height="0.1" depth="10.0" />
        <transform_3d position="0 -0.5 0"/>
        <material diffuse="0.75 0.75 0.75" shininess_factor="32.0"/>
    </entity>

</scene>