<scene>

    <entity name="Point Light 1" >
        <point_light diffuse="1.0 1.0 1.0"/>
        <transform_3d position="2.0 2.0 2.0"/>
        <mesh shape="icosphere" radius="0.2" subdivisions="4"/>
        <material diffuse="0.75 0.75 0.75" shininess_factor="32.0"/>
    </entity>

    <entity name="Directional Light 1" >
        <directional_light diffuse="1.0 1.0 1.0"/>
        <transform_3d position="2.0 2.0 2.0"/>
    </entity>

    <!-- Viewports should be set in terms of ratios. This is a more versatile solution for resizing windows -->
    <entity name="Main Camera" >
        <camera viewport_ratio="0 0 1 1" perspective="true"/>
        <transform_3d position="-0.5 0.5 2.8"/>
        <input_control/>
    </entity>

    <entity name="Dragon 1" >
        <mesh shape="obj" fpath="models/dragon.obj"/>
        <material diffuse="0.0 0.41 0.2" shininess_factor="32.0"/>
        <transform_3d/>
    </entity>

    <entity name="Dragon 2" >
        <mesh shape="obj" fpath="models/dragon.obj"/>
        <transform_3d position="-1 0 -1"/>
        <material diffuse="0.2 .3 0.8" shininess_factor="32.0"/>
    </entity>

    <entity name="Red Sphere" >
        <mesh shape="icosphere" radius="0.5" subdivisions="4"/>
        <collider shape="sphere" radius="0.5"/>
        <transform_3d position="2 0 2"/>
        <material diffuse="tab10_red" shininess_factor="32.0"/>
    </entity>


    <entity name="Red Cylinder" >
        <mesh shape="cylinder" radius="0.1"/>
        <transform_3d position="-2 0 2" rotation_deg="0 0 90"/>
        <material diffuse="red" shininess_factor="32.0"/>
    </entity>

    <entity name="Green Cylinder" >
        <mesh shape="cylinder" radius="0.1"/>
        <transform_3d position="-2 0 2" rotation_deg="0 0 0"/>
        <material diffuse="green" shininess_factor="32.0"/>
    </entity>

    <entity name="Blue Cylinder" >
        <mesh shape="cylinder" radius="0.1"/>
        <transform_3d position="-2 0 2" rotation_deg="90 0 0"/>
        <material diffuse="blue" shininess_factor="32.0"/>
    </entity>


    <entity name="Floor" >
        <mesh shape="box" width="10.0" height="0.1" depth="10.0" />
        <transform_3d position="0 -0.5 0"/>
        <material diffuse="0.75 0.75 0.75" shininess_factor="32.0"/>
    </entity>

    <entity name="Sample text" >
        <text_2d font_name="Consolas.ttf" >
            This is a sample text
        </text_2d>
    </entity>

</scene>